#include <bits/stdc++.h>
using namespace std;

#define INF 10000000

int main() {
    int n;
    cin >> n;

    vector<vector<int>> dist(n, vector<int>(n));

    // Input adjacency matrix
    for(int i = 0; i < n; i++) {
        for(int j = 0; j < n; j++) {
            cin >> dist[i][j];
            if(dist[i][j] == 0 && i != j)
                dist[i][j] = INF;  // No edge
        }
    }

    // Floydâ€“Warshall Algorithm
    for(int k = 0; k < n; k++) {
        for(int i = 0; i < n; i++) {
            for(int j = 0; j < n; j++) {
                dist[i][j] = min(dist[i][j], dist[i][k] + dist[k][j]);
            }
        }
    }

    // Output shortest distance matrix
    cout << "All-Pairs Shortest Path:\n";
    for(int i = 0; i < n; i++) {
        for(int j = 0; j < n; j++) {
            if(dist[i][j] >= INF) cout << "INF ";
            else cout << dist[i][j] << " ";
        }
        cout << endl;
    }

    return 0;
}


Output:

All-Pairs Shortest Path:
0 3 5 6
INF 0 2 3
INF INF 0 1
INF INF INF 0