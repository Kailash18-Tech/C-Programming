Pattern  :

CODE  :

#include <stdio.h>

int main()
{
    int n = 5;

    // Upper half
    for (int i = 0; i < n; i++) {
        // Leading spaces
        for(int k = 0; k < n - i - 1; k++) {
            printf(" ");
        }
        // Stars and inner spaces
        for(int j = 0; j < 2*i + 1; j++) {
            if(j == 0 || j == 2*i)
                printf("*");
            else
                printf(" ");
        }
        printf("\n");
    }

    // Lower half
    for (int i = n - 2; i >= 0; i--) {
        // Leading spaces
        for(int k = 0; k < n - i - 1; k++) {
            printf(" ");
        }
        // Stars and inner spaces
        for(int j = 0; j < 2*i + 1; j++) {
            if(j == 0 || j == 2*i)
                printf("*");
            else
                printf(" ");
        }
        printf("\n");
    }

    return 0;
}


