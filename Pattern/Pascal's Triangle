        PASCAL'S TRIANGLE

SOURCE CODE:

#include <stdio.h>

int factorial(int n) {
    int fact = 1;
    for (int i = 1; i <= n; i++)
        fact *= i;
    return fact;
}

int combination(int n, int r) {
    return factorial(n) / (factorial(r) * factorial(n - r));
}

int main() {
    int n = 5; // Number of rows
    
    for (int i = 0; i < n; i++) {
        // Print spaces
        for (int k = 0; k < n - i - 1; k++) {
            printf("  ");
        }
        
        // Print Pascal numbers
        for (int j = 0; j <= i; j++) {
            printf("%d   ", combination(i, j));
        }
        printf("\n");
    }
    
    return 0;
}


OUTPUT:

        1   
      1   1   
    1   2   1   
  1   3   3   1   
1   4   6   4   1   
