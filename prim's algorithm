#include <iostream>
using namespace std;

int main() {
    int n;
    cout << "Enter number of vertices: ";
    cin >> n;

    int graph[20][20];
    cout << "Enter adjacency matrix:\n";
    for (int i = 0; i < n; i++)
        for (int j = 0; j < n; j++)
            cin >> graph[i][j];

    int selected[20] = {0};
    selected[0] = 1;  // Start from vertex 0

    int edges = 0;

    cout << "\nMST Edges:\n";

    while (edges < n - 1) {
        int min = 9999;
        int x = 0, y = 0;

        // Find smallest edge between selected and not selected
        for (int i = 0; i < n; i++) {
            if (selected[i]) {
                for (int j = 0; j < n; j++) {
                    if (!selected[j] && graph[i][j] != 0 && graph[i][j] < min) {
                        min = graph[i][j];
                        x = i;
                        y = j;
                    }
                }
            }
        }

        cout << x << " - " << y << " : " << min << endl;
        selected[y] = 1;
        edges++;
    }

    return 0;
}
INPUT:

Enter number of vertices: 5
Enter adjacency matrix:
0 2 0 6 0
2 0 3 8 5
0 3 0 0 7
6 8 0 0 9
0 5 7 9 0

OUTPUT:

MST Edges:
0 - 1 : 2
1 - 2 : 3
0 - 3 : 6
1 - 4 : 5